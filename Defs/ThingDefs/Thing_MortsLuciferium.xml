        </comps>
        <stages>
            <li>
                <painFactor>0.90</painFactor>
                <capMods>
                    <li><capacity>Consciousness</capacity><offset>0.04</offset></li>
                    <li><capacity>Moving</capacity><offset>0.02</offset></li>
                    <li><capacity>Sight</capacity><offset>0.10</offset></li>
                    <li><capacity>BloodFiltration</capacity><offset>0.45</offset></li>
                    <li><capacity>BloodPumping</capacity><offset>0.1</offset></li>
                    <li><capacity>Metabolism</capacity><offset>0.15</offset></li>
                    <li><capacity>Breathing</capacity><offset>0.06</offset></li>
                </capMods>
            </li>
        </stages>
